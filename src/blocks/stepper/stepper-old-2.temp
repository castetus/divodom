      //     left: -27px;
      // }
      // &_11{
      //     top: -10px;
      //     left: -10px;
      // }
    }
    &__number {
      font-size: 16px;
      color: $accent-color;
      font-weight: 600;
      border-radius: 50%;
      padding: 10px;
      border: 2px solid $second-accent-color;
      margin-right: 5px;
      &:before {
        display: none;
      }
    }
    &__text {
      text-decoration: underline;
      position: static;
    }
    &__description {
      background-color: $white-color;
      padding: 20px;
      max-width: 250px;
      position: absolute;
      z-index: 50;
      display: none;
    }
  }

  @for $i from 1 through 12 {
    .stepper__block_#{$i} {
      transform: rotate(90deg + (30deg * $i));
    }
  }
  @for $i from 1 through 12 {
    .stepper__link_#{$i} {
      transform: rotate(-90deg + (-30deg * $i));
    }
  }
  .test-block {
    position: relative;
  }
  .line {
    height: 1px;
    border: 1px solid black;
    &_1 {
      width: 200px;
      transform: rotate(-45deg);
      transform-origin: 100% 0;
    }
    &_2 {
      width: 100px;
      transform: translateX(200px);
    }
  }
