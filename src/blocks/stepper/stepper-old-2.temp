@import "../../scss/variables";

.stepper {
  z-index: 100;
  // background-color: $light-bg-color;
  // width: 100%;
  position: relative;
  overflow-x: scroll;
  overflow-y: visible;
  &__title {
    position: sticky;
    top: 20px;
    font-size: 22px;
    left: calc(50% - 139px);
    font-weight: bold;
    font-size: 26px;
  }
  &__wrapper {
    margin-block-start: 0;
    margin-block-end: 0;
    height: 500px;
    display: inline-flex;
    padding: 0;
    position: relative;
    align-items: center;
  }
  &__logo {
    display: none;
  }
  &__line {
    min-width: 100%;
    height: 2px;
    border: 1px solid $second-accent-color;
    position: absolute;
    top: 50%;
  }
  &__bottom-link {
    position: absolute;
    font-size: 22px;
    // top: 46%;
    bottom: 10px;
    left: calc(50% - 50px);
    text-decoration: underline;
    font-weight: bold;
  }
  &__block {
    // z-index: 10;
    display: inline-block;
    margin-left: 30px;
  }
  &__link {
    position: relative;
    // z-index: 10;
    font-size: 22px;
    color: $base-color;
    padding: 25px;
    // background: #f7f7f7;
    flex-direction: column;
    display: flex;
    text-decoration: none;
    &_active .stepper__description {
      transition: all 0.4s ease;
      opacity: 1;
      visibility: visible;
    }
    &_active .stepper__number {
      transform: scale(1.2, 1.2);
      transition: all 0.4s ease;
    }
  }
  &__number {
    position: relative;
    max-width: fit-content;
    background-color: $light-bg-color;
    font-size: 24px;
    color: $accent-color;
    font-weight: 600;
    border-radius: 50%;
    padding: 10px;
    border: 2px solid $second-accent-color;
    margin-right: 5px;
    transition: all 0.4s ease;
    &:before {
      content: "";
      position: absolute;
      width: 0px;
      border: 1px solid $second-accent-color;
      height: 50px;
      left: 43%;
    }
    &_top {
      &:before {
        top: -113%;
      }
    }
    &_bottom {
      &:before {
        top: 100%;
      }
    }
  }
  &__text {
    background-color: $light-bg-color;
    position: absolute;
    left: 10px;
    &_top {
      top: -50px;
    }
    &_bottom {
      bottom: -50px;
    }
  }
  &__description {
    transition: all 0.4s ease;
    background-color: $white-color;
    border: 1px solid $second-accent-color;
    padding: 20px;
    max-width: 250px;
    position: absolute;
    z-index: 50;
    visibility: hidden;
    opacity: 0;
    &_bottom {
    }
    &_top {
      bottom: 50px;
    }
  }
}
@media screen and (min-width: 320px) {
  .stepper {
    overflow: hidden;
    width: 100%;
    min-height: 1200px;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
    &__wrapper {
      position: absolute;
      width: 100%;
      // padding-left: 50px;
    }
    &__title {
      position: absolute;
      left: 0;
      right: 0;
      top: 40px;
    }
    &__logo {
      width: 300px;
      height: 300px;
      // display: none;
      // margin-left: 100px;
    }
    &__line {
      display: none;
    }
    &__block {
      position: absolute;
      border: 1px dashed $second-accent-color;
      // width: calc(42% - 145px);
      width: 100%;
      height: 1px;
      // transform-origin: 150% 0px;
